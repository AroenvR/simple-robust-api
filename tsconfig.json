{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "lib": ["es6"],
      "allowJs": true,
      "jsx": "react",
      "outDir": "build",
      "rootDir": "src",
      "composite": true,
      "removeComments": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitReturns": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "build/**/*"]
  }
