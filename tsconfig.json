{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "types": [
            "reflect-metadata",
            "node",
            "jest"
        ],
        "allowJs": true,
        "jsx": "react",
        "rootDir": "src",
        "outDir": "dist",
        "composite": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": false,
        "sourceMap": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist/**/*",
    ]
}